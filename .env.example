# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# Model Configuration
MODEL_NAME=gpt-4o-mini
TEMPERATURE=0.7
MAX_TOKENS=1500
API_BASE=https://api.openai.com/v1

# Audio Rendering Configuration
# Path to SoundFont file for MIDI-to-audio conversion
# Download free SoundFonts from: https://schristiancollins.com/generaluser.php
SOUNDFONT_PATH=l2m/assets/soundfonts/GeneralUser_GS_v1.471.sf2
AUDIO_SAMPLE_RATE=44100
AUDIO_FORMAT=wav  # Options: wav, mp3, both
ENABLE_AUDIO_EXPORT=true

# Logging Configuration
LOG_LEVEL=INFO
